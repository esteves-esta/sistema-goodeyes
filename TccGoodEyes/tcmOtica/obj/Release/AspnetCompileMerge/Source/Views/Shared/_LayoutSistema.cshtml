                    </a>
                </li>
                @*<li>@Html.ActionLink("HOME", "Index", "Sistema")</li>*@
                <li class="dropdown">
                    <a class="key">CADASTRO</a>
                    <ul class="menudrop">
                        <li><a href="~/Sistema/CadFornecedor?cod=0&aviso=0">Fornecedor</a></li>
                        <li><a href="~/Sistema/CadMarca?cod=0&aviso=0">Marca</a></li>
                        <li><a href="~/Sistema/CadProduto?cod=0&aviso=0">Produto</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a  class="key">CONSULTA</a>
                    <ul class="menudrop">
                        <li><a href="~/Sistema/ConsFornecedor?&aviso=0">Fornecedor</a></li>
                        <li><a href="~/Sistema/ConsMarca?&aviso=0">Marca</a></li>
                        <li><a href="~/Sistema/ConsEstoque?&aviso=0">Estoque</a></li>
                        <li><a href="~/Sistema/ConsCliente?aviso=0">Cliente</a></li>
